<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.NoActionBar"><!-- Need Theme.AppCompat for ActionBar compatibility -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <!--<item name="android:listChoiceIndicatorMultiple">@drawable/ckb_geovelo</item>-->
        <item name="searchViewStyle">@style/BaseAppTheme.SearchView</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>

    <style name="BaseAppTheme.SearchView" parent="Widget.AppCompat.SearchView" />

    <style name="PreferenceThemeOverlay.v14">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textColorSecondary">#999999</item>
    </style>
</resources>